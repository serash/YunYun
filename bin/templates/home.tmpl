<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th><h3>Word</h3></th>
          <th><h3>Pronunciation</h3></th>
          <th><h3>Meaning</h3></th>
          <th><h3><span class="glyphicon glyphicon-time"></span> Review</h3></th>
        </tr>
      </thead>
      {{range .}}
      <!-- Kotoba entry -->
      <tr>
        <td><a href="/kotoba/{{ .Id }}"><h3>{{ .Goi }}</h3></a></td>
        <td><h4>{{ .Hatsuon }}</h4> </td>
        <td><h4>{{ .Imi }}</h4> </td>
        <td><h4>{{ .Review }}</h4></td>
      </tr>
      {{end}}
    </table>
  </div>
